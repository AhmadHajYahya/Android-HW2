<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity"
    android:background="@drawable/ic_launcher_new_background">

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/obstacles_BTN_sensor_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sensor Mode"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="148dp"
        android:layout_marginStart="36dp"
        android:textSize="32sp"
        android:backgroundTint="#FF9800" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/obstacles_BTN_button_mode"
        android:layout_below="@+id/obstacles_BTN_sensor_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Button Mode"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:layout_marginStart="36dp"
        android:textSize="32sp"
        android:backgroundTint="#FF9800" />

    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/obstacles_BTN_records"
        android:layout_below="@+id/obstacles_BTN_button_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Records"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:layout_marginStart="36dp"
        android:textSize="32sp"
        android:backgroundTint="@color/yellow_400" />

</RelativeLayout>
